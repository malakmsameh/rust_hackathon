// Simplified main that focuses on just connecting and displaying output
use anyhow::Result;
use crossterm::{
    event::{self, DisableMouseCapture, EnableMouseCapture, Event, KeyCode},
    execute,
    terminal::{disable_raw_mode, enable_raw_mode, EnterAlternateScreen, LeaveAlternateScreen},
};
use ratatui::{
    backend::CrosstermBackend,
    layout::{Constraint, Direction, Layout},
    style::{Color, Style},
    text::{Line, Span},
    widgets::{Block, Borders, Paragraph, Wrap},
    Terminal,
};
use std::io;
use std::time::Duration;
use std::process::{Command, Stdio};
use std::io::Write;
use std::thread;

fn main() -> Result<()> {
    env_logger::init();

    // Setup terminal
    enable_raw_mode()?;
    let mut stdout = io::stdout();
    execute!(stdout, EnterAlternateScreen, EnableMouseCapture)?;
    let backend = CrosstermBackend::new(stdout);
    let mut terminal = Terminal::new(backend)?;

    // Use espflash monitor instead of direct serial
    let res = run_app(&mut terminal);

    // Restore terminal
    disable_raw_mode()?;
    execute!(
        terminal.backend_mut(),
        LeaveAlternateScreen,
        DisableMouseCapture
    )?;
    terminal.show_cursor()?;

    if let Err(err) = res {
        println!("Error: {:?}", err);
    }

    Ok(())
}

struct App {
    output_buffer: Vec<String>,
    status: String,
    packets_count: u64,
    command_buffer: String,
}

impl App {
    fn new() -> Self {
        App {
            output_buffer: vec!["Connected to ESP32 CSI Monitor".to_string()],
            status: "Ready - press h for help".to_string(),
            packets_count: 0,
            command_buffer: String::new(),
        }
    }

    fn send_command(&mut self, cmd: &str) {
        self.output_buffer.push(format!(">>> {}", cmd));
        self.status = format!("Sent: {}", cmd);

        // Keep only last 30 lines
        if self.output_buffer.len() > 30 {
            self.output_buffer.remove(0);
        }
    }

    fn add_output(&mut self, line: &str) {
        if !line.trim().is_empty() {
            self.output_buffer.push(line.to_string());

            // Track packets
            if line.contains("mac:") {
                self.packets_count += 1;
            }

            // Keep only last 30 lines
            if self.output_buffer.len() > 30 {
                self.output_buffer.remove(0);
            }
        }
    }
}

fn run_app<B: ratatui::backend::Backend>(
    terminal: &mut Terminal<B>,
) -> Result<()> {
    let mut app = App::new();

    // Start espflash monitor in background
    let mut child = Command::new("sudo")
        .args(&["/home/tuqa-saeed/.cargo/bin/espflash", "monitor", "--port", "/dev/ttyUSB0"])
        .stdin(Stdio::piped())
        .stdout(Stdio::piped())
        .stderr(Stdio::piped())
        .spawn()?;

    app.add_output("Starting ESP32 monitor...");
    thread::sleep(Duration::from_millis(500));

    loop {
        // Draw UI
        terminal.draw(|f| {
            let chunks = Layout::default()
                .direction(Direction::Vertical)
                .constraints([
                    Constraint::Length(3),
                    Constraint::Length(3),
                    Constraint::Percentage(60),
                    Constraint::Length(12),
                ])
                .split(f.area());

            // Header
            let header = Paragraph::new("ESP32 CSI Monitor - Terminal User Interface")
                .style(Style::default().fg(Color::Cyan))
                .block(Block::default().borders(Borders::ALL).title("Header"));
            f.render_widget(header, chunks[0]);

            // Status
            let status = Paragraph::new(vec![
                Line::from(format!("Status: {}", app.status)),
                Line::from(format!("Packets: {}", app.packets_count)),
            ])
            .style(Style::default().fg(Color::Green))
            .block(Block::default().borders(Borders::ALL).title("Status"));
            f.render_widget(status, chunks[1]);

            // Output
            let output_lines: Vec<Line> = app
                .output_buffer
                .iter()
                .map(|line| Line::from(line.clone()))
                .collect();

            let output = Paragraph::new(output_lines)
                .wrap(Wrap { trim: false })
                .block(Block::default().borders(Borders::ALL).title("Device Output"));
            f.render_widget(output, chunks[2]);

            // Commands
            let commands = Paragraph::new(vec![
                Line::from("w=sniffer | c=start | 1=traffic | s=config | h=help | q=quit"),
            ])
            .style(Style::default().fg(Color::Yellow))
            .block(Block::default().borders(Borders::ALL).title("Commands"));
            f.render_widget(commands, chunks[3]);
        })?;

        // Handle input with shorter timeout
        if event::poll(Duration::from_millis(100))? {
            if let Event::Key(key) = event::read()? {
                let cmd = match key.code {
                    KeyCode::Char('q') => {
                        let _ = child.kill();
                        return Ok(());
                    }
                    KeyCode::Char('h') => "help",
                    KeyCode::Char('w') => "set-wifi --mode=sniffer --set-channel=6",
                    KeyCode::Char('c') => "start --duration=120",
                    KeyCode::Char('s') => "show-config",
                    KeyCode::Char('1') => "set-traffic --frequency-hz=10",
                    _ => "",
                };

                if !cmd.is_empty() {
                    app.send_command(cmd);

                    // Try to send to child process
                    if let Some(mut stdin) = child.stdin.as_ref() {
                        let _ = writeln!(stdin, "{}", cmd);
                    }
                }
            }
        }
    }
}
